# Copy this to .env and fill real secrets. Do NOT commit .env to source control.
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=changeme
MONGO_INITDB_DATABASE=ecommerce
MONGO_URI=mongodb://admin:changeme@ecommerce_mongodb:27017/ecommerce?authSource=admin
REDIS_URL=redis://ecommerce_redis:6379
REQUEST_TRACE=1
# When set to 1 the backend will reject non-JSON request bodies for mutating methods (POST/PUT/PATCH/DELETE).
# Enable in staging/production after verifying clients are JSON-compliant.
STRICT_JSON=1
TRACE_REDACT_KEYS=password,token,authorization
JWT_SECRET=change_this
