{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^1.7.9",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "redis": "^4.6.13",
    "xss-clean": "^0.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:backend": "node server.js",
    "start:backend:smart": "node scripts/start-backend-smart.js",
    "start:frontend": "node scripts/serve-static.js",
    "start:both": "concurrently -n BACKEND,FRONTEND -c green,cyan \"npm run start:backend:smart\" \"npm run start:frontend\"",
    "dev:backend": "cd backend && nodemon server.js",
    "dev:frontend": "react-scripts start",
    "dev:all": "concurrently -n BACKEND,FRONTEND -c green,cyan \"npm run dev:backend\" \"npm run dev:frontend\"",
    "seed:db": "node backend/scripts/seed.js",
    "seed:products": "node backend/scripts/seedProducts.js",
    "wait:backend": "node -e \"const http=require('http');let a=Date.now();const retry=()=>{http.get('http://localhost:5000/health',r=>{if(r.statusCode===200){console.log('Backend ready in '+(Date.now()-a)+'ms');process.exit(0);}else setTimeout(retry,500);}).on('error',()=>setTimeout(retry,500));};retry();\"",
    "run:all": "concurrently -n BACKEND,FRONTEND -c green,cyan \"npm run start:backend:smart\" \"npm run start:frontend\"",
    "run:all:seed": "npm run seed:db && npm run run:all",
    "run:all:wait": "concurrently -n BACKEND,FRONTEND -c green,cyan \"npm run start:backend:smart\" \"npm run start:frontend\" & npm run wait:backend",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:ci": "CI=true react-scripts test --coverage --watchAll=false",
    "smoke": "node scripts/smoke.js",
    "smoke:codespaces": "BACKEND_URL=https://potential-guide-wv5pxxvwg45cgr75-5000.app.github.dev FRONTEND_URL=https://potential-guide-wv5pxxvwg45cgr75-3001.app.github.dev node scripts/smoke.js",
    "start:infra": "docker compose up -d mongodb redis backend; pkill -f \"node scripts/serve-static.js\" || true; nohup node scripts/serve-static.js >/tmp/frontend-static.log 2>&1 & sleep 1; tail -n 3 /tmp/frontend-static.log",
    "start:codespaces": "npm run -s start:infra && echo 'Backend: https://potential-guide-wv5pxxvwg45cgr75-5000.app.github.dev/health' && echo 'Frontend: https://potential-guide-wv5pxxvwg45cgr75-3001.app.github.dev/' && npm run -s smoke:codespaces",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@opentelemetry/auto-instrumentations-node": "^0.50.0",
    "@opentelemetry/sdk-node": "^0.50.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "concurrently": "^9.2.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest-sonar-reporter": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb-memory-server": "^10.1.4",
    "mongoose": "^8.6.2",
    "stripe": "^16.0.0",
    "supertest": "^7.0.0"
  },
  "overrides": {
    "@babel/plugin-proposal-private-property-in-object": "7.21.11"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
